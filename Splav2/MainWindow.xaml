<Window x:Class="Splav2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mvvm="clr-namespace:MVVM;assembly=MVVM"
        xmlns:local="clr-namespace:Splav2"
        xmlns:viewModel="clr-namespace:Splav2.ViewModels"
        xmlns:view="clr-namespace:Splav2.Views"
        mc:Ignorable="d"
		Title="Проект по C#" Height="900" Width="1600">

    <Window.Background>
        <ImageBrush ImageSource="/Splav2;component/Images/back.png"/>
    </Window.Background>
    <Window.DataContext>
        <viewModel:ViewModelMainWindow/>
    </Window.DataContext>
    <ContentControl.Resources>
        <DataTemplate DataType="{x:Type viewModel:ViewModelOpenDB}">
            <view:UserControlOpenDB/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:ViewModelOpenScript}">
            <view:UserControlOpenScript/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:ViewModelPrintPyScr}">
            <view:UserControlPrintPyScr/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:ViewModeOutputPath}">
            <view:UserControlOutputPath/>
        </DataTemplate>
    </ContentControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ContentControl
            Grid.Column="0"
            Content="{Binding Win.CurrentPage}" HorizontalAlignment="Left" Width="790"/>
        <Grid Grid.Column="1" Margin="5,0,-5,0">
            <Grid.RowDefinitions>
                <RowDefinition ></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Right" Margin="10,10,10,10">
                <Button Content="Назад"  Height="50" Width="100" Command="{Binding PreviousPage}" Margin="0,0,15,0" Style="{StaticResource ButtonStyle}" />
                <Button Content="Далее"  Height="50" Width="100" Command="{Binding NextPage}" Style="{StaticResource ButtonStyle}"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
