<UserControl x:Class="Splav2.Views.UserControlOpenScript"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewModel="clr-namespace:Splav2.ViewModels"
             xmlns:local="clr-namespace:Splav2.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance viewModel:ViewModelOpenScript}"
             >
    
    <Grid Background="White">
        <Button Content="Обзор" Width="50" Height="25" Margin="10" HorizontalAlignment="Left" VerticalAlignment="Top" Command="{Binding OpenScriptPy}"/>
        <TextBlock Text="{Binding FilePath}" Margin="20,54,20,28"/>
    </Grid>
</UserControl>
