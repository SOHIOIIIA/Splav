<UserControl x:Class="Splav2.Views.UserControlOpenScript"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewModel="clr-namespace:Splav2.ViewModels"
             xmlns:local="clr-namespace:Splav2.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance viewModel:ViewModelOpenScript}"
             >
    <Border BorderBrush = "White" BorderThickness="2" >
        <Grid >
            <Button Content="Обзор" Width="100" Height="30"  HorizontalAlignment="Left" VerticalAlignment="Top" Command="{Binding OpenScriptPy}"/>
            <TextBlock Text="{Binding FilePath}"  Margin="20,54,26,28" Foreground="White" TextWrapping="Wrap" />
        </Grid>
    </Border>
</UserControl>
