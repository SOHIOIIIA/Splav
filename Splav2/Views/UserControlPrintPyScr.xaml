<UserControl x:Class="Splav2.Views.UserControlPrintPyScr"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewModel="clr-namespace:Splav2.ViewModels"
             xmlns:local="clr-namespace:Splav2.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance viewModel:ViewModelPrintPyScr}"
             >
    <Border BorderBrush = "White" BorderThickness="2" >
        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Button Grid.Row="0" Width="100" HorizontalAlignment="Left" Content="Отобразить текст python скрипта" Command="{Binding PrintCommand}" Style="{StaticResource ButtonStyle}"/>

            <ScrollViewer Grid.Row="1">
                <Border BorderBrush = "White" BorderThickness="2" >
                    <TextBlock  Foreground="White" Grid.Row="1"  x:Name="PrintScript" Text="{Binding PythonScriptText}" Style="{StaticResource TextBlockStyle}"/>
                    </Border>
            </ScrollViewer>
        </Grid>
    </Border>
</UserControl>
