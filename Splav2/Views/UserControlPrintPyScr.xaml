<UserControl x:Class="Splav2.Views.UserControlPrintPyScr"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewModel="clr-namespace:Splav2.ViewModels"
             xmlns:local="clr-namespace:Splav2.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance viewModel:ViewModelPrintPyScr}"
             >

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <ScrollViewer>
            <TextBlock Grid.Row="0" x:Name="PrintScript" Text="{Binding PythonScriptText}" />
        </ScrollViewer>
        <Button Grid.Row="1" Content="Отобразить текст python скрипта" Command="{Binding PrintCommand}"/>
    </Grid>
</UserControl>
