<UserControl x:Class="Splav2.Views.UserControlOutputPath"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewModel="clr-namespace:Splav2.ViewModels"
             xmlns:local="clr-namespace:Splav2.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.DataContext>
        <viewModel:ViewModeOutputPath/>
    </UserControl.DataContext>

    <Grid Background="LightCoral">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <Label Content="Путь к созданой модели"/>
            <TextBlock Text="{Binding OutputPath}"/>
        </StackPanel>
    </Grid>
</UserControl>
